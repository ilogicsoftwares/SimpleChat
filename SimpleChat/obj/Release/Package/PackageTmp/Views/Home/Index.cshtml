@model SimpleChat.Models.Chat
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 class="text-center">Simple Chat</h1>
 
</div>

<div class="row">
    <div class="col-md-4">
      
    </div>
    <div class="col-md-4">
  @using (Html.BeginForm("Chat", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
  {
         <div class="form-group">
             @Html.LabelFor(model => model.user, "Nombre")<span class="required" style="color:red">*</span>
             @Html.TextBoxFor(model => model.user, new { @class = "form-control", placeholder = "Inserte Su Nombre", type = "text" })
             @Html.ValidationMessageFor(model => model.user, "", new { @style = "color:red" })
         </div>
        <div class="form-group">
            @Html.LabelFor(model => model.canal, "Canal")<span class="required" style="color:red">*</span>
            @Html.TextBoxFor(model => model.canal, new { @class = "form-control", placeholder = "Inserte el Canal de Chat", type = "text" })
            @Html.ValidationMessageFor(model=>model.canal,"",new {@style="color:red" })
            <input type="submit" class="btn btn-info pull-right" value="Enviar">
        
        </div>
        @Html.ValidationSummary("", new { @style = "color:red;" })
  }

    </div>
    <div class="col-md-4">
      
    </div>
</div>